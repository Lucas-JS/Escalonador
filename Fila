//implementação da fila

public class FilaCircularDinamica {
    No inicio, fim, proximo;
    
    public boolean vazia(){
        return inicio == null && fim == null;
    }//caso a fila esteja vazia retorna verdadeiro
    
    public void adicionarFila(Processo valor){
        No novo = new No(valor);
        
        if(vazia()){
            inicio = novo;
            fim = novo;
            fim.proximo = inicio;
        }else{
            novo.proximo = inicio;
            fim.proximo = novo;
            fim = novo;
        }
    }
    
    public int removerFila(){
        int removido;
        
        if (vazia()){
            removido = -1;
        }else if (inicio == fim){
            removido = inicio.valor;
            inicio = null;
            fim = null;
        }else{
            removido = inicio.valor;
            fim = inicio;
            inicio = inicio.proximo;
            fim.proximo = inicio;
        }
        return removido;
    }
    
    public FilaCircularDinamica(){
        this.inicio = null;
        this.fim = null;
        
    }
    
}



